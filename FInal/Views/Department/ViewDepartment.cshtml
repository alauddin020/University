@using FInal.Models

@{
    Layout = null;
    List<Department> aDepartments = ViewBag.Message;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-7">
                <div class="card">
                    <div class="card-header">
                        <strong>All Department</strong>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead class="bg-light">
                                <tr>
                                    <th>Serial No</th>
                                    <th>Department Code</th>
                                    <th>Department Name</th>
                                </tr>
                            </thead>
                            @{
                                int i = 1;
                                foreach (var alldepartment in aDepartments)
                                {

                                    <tbody>
                                    <tr>
                                        <td>@i</td>
                                        <td>@alldepartment.DepartmentCode</td>
                                        <td>@alldepartment.DepartmentName</td>
                                    </tr>
                                    </tbody>
                                    i++;
                                }
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
