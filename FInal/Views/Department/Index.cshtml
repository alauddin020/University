@using FInal.Models
@{
    Layout = null;
      string dept = ViewBag.Message;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Department</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet"/>
    <style>.error{color: red;}</style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-7">
                <div class="card">
                    <div class="card-header">
                        <strong>Add Department</strong><br/>
                        <strong>@dept</strong>
                    </div>
                    <div class="card-body">
                        <form action="#" method="POST" id="myform">
                            <div class="form-group row">
                                <label for="code" class="col-sm-4 col-form-label">Course Code</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="DepartmentCode" name="DepartmentCode" placeholder="Enter Course Code">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="name" class="col-sm-4 col-form-label">Department Name</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="DepartmentName" name="DepartmentName" placeholder="Enter Department Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="btn" class="col-sm-4 col-form-label"></label>
                                <div class="col-sm-8">
                                    <input type="submit" id="btn"  class="btn btn-success" value="Add Department">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script>
        $("#myform").validate({
            rules: {
                DepartmentName: "required",
                DepartmentCode: {
                    required: true,
                    minlength: 2,
                    maxlength: 7
                }
            },
            messages: {
                DepartmentName: "Please enter department name",
                DepartmentCode: {
                    required: "Please enter a department code",
                    minlength: "At least 2 characters",
                    maxlength: "MaxLength 7 characters"
                }
            }

        });
    </script>
</body>
</html>
